<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dream Car Rental</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="navbar navbar-default navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Dream Car Rental", "Index", "Manager", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Manager")</li>
                    <li>@Html.ActionLink("Customers", "Index", "Customer")</li>
                    <li>@Html.ActionLink("Employees", "Index", "Employee")</li>
                    <li>@Html.ActionLink("Vehicles", "Index", "Vehicle")</li>
                    <li>@Html.ActionLink("Reservations", "Index", "Reservation")</li>
                    <li>@Html.ActionLink("Report", "Index", "Report")</li>
                    @*<li class="dropdown">
                        <a class="dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true" href="#">Report<span class="caret"></span></a>
                        <ul class="dropdown-menu" aria-labelledby="dropdownMenu1" style="background: aliceblue;">
                            <li>@Html.ActionLink("Daily Report", "Daily_Report", "Manager")</li>
                            <li>@Html.ActionLink("Monthly Report", "Month_Report", "Manager")</li>
                            <li>@Html.ActionLink("Yearly Report", "Year_Report", "Manager")</li>
                        </ul>
                    </li>*@
                    <li>@Html.ActionLink("About", "About", "Home")</li>
                    <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div style="margin-top: 12px;" class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Dream Car Rental</p>
        </footer>
    </div>
    
    <link href="~/Content/bootstrap_datepicker/bootstrap-datetimepicker.min.css" rel="stylesheet" />

    <script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.14.1/moment.min.js"></script>
    <script src="~/Content/bootstrap_datepicker/bootstrap-datetimepicker.min.js"></script>
    

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    <script src="~/Scripts/PanelControl.js"></script>
    

    @RenderSection("scripts", required: false)
</body>
</html>
