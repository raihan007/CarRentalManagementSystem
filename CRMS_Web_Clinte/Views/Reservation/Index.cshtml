@model IEnumerable<CRMS_Data.Entities.Reservation>

@{
    ViewBag.Title = "PendingReservation";
}

<h2>PendingReservation</h2>

<table class="table table-responsive table-bordered table-hover table-condensed">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ReservationDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ReservedBy)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PickUpLocation)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PickUpDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PickUpTime)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DropOffLocation)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DropOffDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DropOffTime)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ReservationAmount)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ReservationStatus)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ReservationVehicleId)
