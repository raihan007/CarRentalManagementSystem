                @Html.DisplayFor(modelItem => item.DropOffLocation)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DropOffDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DropOffTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ReservationAmount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ReservationStatus)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ReservationVehicleId)
            </td>
